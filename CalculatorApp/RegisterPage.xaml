<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
     x:Class="CalculatorApp.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="30" Spacing="15">
            <Entry x:Name="NewUsernameEntry" Placeholder="New Username" />
            <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <Button Text="Submit" Clicked="OnSubmitClicked" />
            </VerticalStackLayout>
    </ScrollView>

</ContentPage>
