<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
     x:Class="CalculatorApp.ConversorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Conversor Page">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text ="Operations" Clicked="OnOperationsClicked"/>
        <ToolbarItem Text ="Logout" Clicked="OnLogoutClicked"/>
        <ToolbarItem Text ="Exit"/>
    </ContentPage.ToolbarItems>

     <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Entry x:Name="NumberLabel"
                   Text=""
                   HorizontalOptions="Fill"
                   VerticalOptions="Start"
                   FontSize="24"
                   TextColor="Black"
                   Margin="0,10"
                   BackgroundColor="LightGrey"/>

            <Grid Padding="20" ColumnSpacing="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Column="0" Spacing="20">
                    <Grid
                        RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                        ColumnDefinitions="*,*,*"
                        RowSpacing="10"
                        ColumnSpacing="10">

                        <Button Text="7" Clicked="On7Clicked" Grid.Row="1" Grid.Column="0"/>
                        <Button Text="8" Clicked="On8Clicked" Grid.Row="1" Grid.Column="1"/>
                        <Button Text="9" Clicked="On9Clicked" Grid.Row="1" Grid.Column="2"/>
                        <Button Text="4" Clicked="On4Clicked" Grid.Row="2" Grid.Column="0"/>
                        <Button Text="5" Clicked="On5Clicked" Grid.Row="2" Grid.Column="1"/>
                        <Button Text="6" Clicked="On6Clicked" Grid.Row="2" Grid.Column="2"/>
                        <Button Text="1" Clicked="On1Clicked" Grid.Row="3" Grid.Column="0"/>
                        <Button Text="2" Clicked="On2Clicked" Grid.Row="3" Grid.Column="1"/>
                        <Button Text="3" Clicked="On3Clicked" Grid.Row="3" Grid.Column="2"/>
                        <Button Text="AC" Clicked="OnACClicked" Grid.Row="4" Grid.Column="0"/>
                        <Button Text="0" Clicked="On0Clicked" Grid.Row="4" Grid.Column="1"/>
                        <Button Text="-" Clicked="OnMinusClicked" Grid.Row="4" Grid.Column="2"/>
                    </Grid>

                    <Grid
                        RowDefinitions="Auto, Auto"
                        ColumnDefinitions="*,*,*"
                        RowSpacing="10"
                        ColumnSpacing="10">
                        <Button Text="A" Clicked="OnAClicked" Grid.Row="0" Grid.Column="0"/>
                        <Button Text="B" Clicked="OnBClicked" Grid.Row="0" Grid.Column="1"/>
                        <Button Text="C" Clicked="OnCClicked" Grid.Row="0" Grid.Column="2"/>
                        <Button Text="D" Clicked="OnDClicked" Grid.Row="1" Grid.Column="0"/>
                        <Button Text="E" Clicked="OnEClicked" Grid.Row="1" Grid.Column="1"/>
                        <Button Text="F" Clicked="OnFClicked" Grid.Row="1" Grid.Column="2"/>
                    </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="15" VerticalOptions="Start">
                    <Button Text="DecimalToBinary" Clicked="OnDecimalToBinaryClicked" />
                    <Button Text="DecimalToTwoComplement" Clicked="OnDecimalToTwoComplementClicked" />
                    <Button Text="DecimalToOctal" Clicked="OnDecimalToOctalClicked" />
                    <Button Text="DecimalToHexadecimal" Clicked="OnDecimalToHexadecimalClicked" />
                    <Button Text="BinaryToDecimal" Clicked="OnBinaryToDecimalClicked" />
                    <Button Text="TwoComplementToDecimal" Clicked="OnTwoComplementToDecimalClicked" />
                    <Button Text="OctalToDecimal" Clicked="OnOctalToDecimalClicked" />
                    <Button Text="HexadecimalToDecimal" Clicked="OnHexadecimalToDecimalClicked" />
                </VerticalStackLayout>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
