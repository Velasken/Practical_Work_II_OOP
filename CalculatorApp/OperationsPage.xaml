<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
     x:Class="CalculatorApp.OperationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Operation Page">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text ="Conversor" Clicked="OnConversorClicked"/>
        <ToolbarItem Text ="Logout" Clicked="OnLogoutClicked"/>
        <ToolbarItem Text ="Exit" Clicked="OnExitClicked"/>
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label x:Name="UsernameLabel" FontSize="20" />
            <Label x:Name="EmailLabel" FontSize="20" />
            <Label x:Name="PasswordLabel" FontSize="20" />
            <Label x:Name="OperationsCountLabel" FontSize="20" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
