<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
     x:Class="CalculatorApp.OperationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Operation Page"
    BackgroundColor="#D3D3D3">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Conversor" Clicked="OnConversorClicked"/>
        <ToolbarItem Text="Logout" Clicked="OnLogoutClicked"/>
        <ToolbarItem Text="Exit" Clicked="OnExitClicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Grid HeightRequest="80" BackgroundColor="#3B556D">
                <Label Text="OOP Conversor"
                       FontSize="28"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Content -->
            <Label x:Name="UsernameLabel" FontSize="20" TextColor="Black"/>
            <Label x:Name="EmailLabel" FontSize="20" TextColor="Black"/>
            <Label x:Name="PasswordLabel" FontSize="20" TextColor="Black"/>
            <Label x:Name="OperationsCountLabel" FontSize="20" TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>